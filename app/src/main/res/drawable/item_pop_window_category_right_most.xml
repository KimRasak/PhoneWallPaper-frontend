<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/orange" android:width="0.5dp"/>
        </shape>
    </item>

    <item>
        <layer-list>
            <item
                android:left="-1dp"
                android:right="-1dp"
                android:bottom="-1dp">
                <shape>
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>